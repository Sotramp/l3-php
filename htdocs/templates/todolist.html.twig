{% extends 'base.html.twig' %}

{% block title %}
    To Do List
{% endblock %}

{% block body %}
    <h1>To Do List :</h1>

    <ul style="display:grid; grid-template-columns: repeat(4, 1fr); grid-gap: 20px; padding-left: 0;">
        {% for todo in todolist %}
        {% set bgColor = todo.completed == 'true' ? '#2ecc71' : '#e74c3c' %}
        <li style="background-color: {{ bgColor }}; padding: 15px; list-style-type: none;">
            <p>Utilisateur n째 : {{ todo.userId }}</p>
            <p>N째 de la t창che : {{ todo.id }}</p>
            <p>Nom de la t창che : {{ todo.title }}</p>
            <p>Statut : {{ todo.completed == 'true' ? 'Faite' : 'Pas encore faite' }}</p>
        </li>
        {% endfor %}
    </ul>
{% endblock %}